<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <AnchorPane prefHeight="600.0" prefWidth="900.0">
         <children>
            <VBox layoutX="44.0" layoutY="67.0" prefHeight="77.0" prefWidth="76.0" spacing="15.0">
               <children>
                  <Label text="ID" />
                  <Label text="Title" />
                  <Label text="Genre" />
                  <Label text="Year" />
                  <Label text="Rating" />
               </children>
            </VBox>
            <VBox layoutX="120.0" layoutY="65.0" prefHeight="121.0" prefWidth="160.0" spacing="6.0">
               <children>
                  <TextField fx:id="tfID" />
                  <TextField fx:id="tfTitle" />
                  <TextField fx:id="tfGenre" />
                  <TextField fx:id="tfYear" />
                  <TextField fx:id="tfRating" />
               </children>
            </VBox>
            <Button fx:id="insertBtn" layoutX="120.0" layoutY="224.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="160.0" text="Insert" />
            <Button fx:id="updateBtn" layoutX="120.0" layoutY="261.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="160.0" text="Update" />
            <Button fx:id="deleteBtn" layoutX="120.0" layoutY="299.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="160.0" text="Delete" />
            <TableView fx:id="tvFilms" layoutX="297.0" layoutY="66.0" prefHeight="492.0" prefWidth="570.0">
              <columns>
                <TableColumn fx:id="colID" prefWidth="75.0" text="ID" />
                <TableColumn fx:id="colTitle" prefWidth="190.0" text="Title" />
                  <TableColumn fx:id="colGenre" prefWidth="118.0" text="Genre" />
                  <TableColumn fx:id="colYear" minWidth="0.0" prefWidth="91.0" text="Year" />
                  <TableColumn fx:id="colRating" prefWidth="94.0" text="Rating" />
              </columns>
            </TableView>
            <Label layoutX="44.0" layoutY="14.0" text="Film Database">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </children>
</GridPane>
